  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug AutoInstall",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/AutoInstall/AutoInstall.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/AutoInstall",
      "justMyCode": true
    },
    {
      "name": "Python: Debug SimSelector",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/SimSelector/SimSelector.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/SimSelector",
      "justMyCode": true
    },
    {
      "name": "Python Attach Process",
      "type": "python",
      "request": "attach",
      "processId":"${command:pickProcess}",
      "justMyCode": true

    },
    {
      "name": "Python: Debug Make",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/make.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["install"],
      "justMyCode": false
    }
  ]
}